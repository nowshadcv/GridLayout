<?xml version="1.0" encoding="utf-8"?>
<resources>
 <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name = "colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FunctionalButtons" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorNumButtonBG</item>
        <item name="android:background">@drawable/func_round_rectangle_buttons</item>
    </style>
    <style name="NumButtons" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorNumButtonTxt</item>
        <item name="android:background">@drawable/num_round_rectangle_button</item>
    </style>
    <style name="EqButtons" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorEqlButtonTxt</item>
        <item name="android:background">@drawable/equal_round_rectangle_button</item>
    </style>
</resources>